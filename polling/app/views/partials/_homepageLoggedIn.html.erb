
		<!-- Current User Here:  			<%#= @user.id %>				<br>
		List of Answered Q's Here:  	<%#= @answered_questions %>		<br>
		List of Voted Q's Here:  		<%#= @voted_qs %>				<br>
		List of Unanswered Q ID's Here:	<%#= @unanswered_questions_id %>	<br> -->


	  	<% @all_questions.reverse.each do |q| %>

		  		<span><a href='/questions/<%= q.id %>' class='questionTitle'><strong><%= q.content %></strong></a></span>
		  		<br>
		  		<span class='time'>Asked about <%= time_ago_in_words(q.created_at) %> ago</span><br><br>

				<ul>
					<% q.question_options.each do |o| %>
					<li class='option'>
							<span class='option'><%= o.option %></span>

							<%= link_to upvote_path(o), method: :put do %>
									<button type="button" class="btn color-scheme-A pull-right thumb" aria-label="Left Align">
							        <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center nav-text" aria-hidden="true"></span>
									</button>
	
						<% end %> 

					</li><br>

					<% end %>
				</ul><hr class='line-break'>
		<% end %>